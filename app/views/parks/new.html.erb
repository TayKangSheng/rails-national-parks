<h1>New Park</h1>


<%= form_for @park, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <div class="form-group">
      <%= f.label :name%>
      <%= f.text_field :name, type: 'text', class: 'form-control', placeholder:"Name of Park" %>
  </div>
  <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, type: 'text', class: 'form-control', rows: 12, placeholder:"Description of Park" %>
  </div>
  <div class="form-group">
      <%= f.label :URL %>
      <%= f.text_field :picture, type: 'text', class: 'form-control', placeholder: "URL to a picture of Park" %>
  </div>
  <div class="form-group">
    <%= link_to 'Back', parks_path, class: 'btn btn-default' %>
    <%= f.submit "Create", class: 'btn btn-primary' %>
  </div>
<% end %>
